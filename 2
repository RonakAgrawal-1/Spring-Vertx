import io.r2dbc.postgresql.PostgresqlConnectionConfiguration;
import io.r2dbc.postgresql.PostgresqlConnectionFactory;

public class PostgresqlConnectionFactoryBuilder {

    private String host;
    private int port;
    private String username;
    private String password;
    private String database;

    private PostgresqlConnectionFactoryBuilder() {}

    public static PostgresqlConnectionFactoryBuilder builder() {
        return new PostgresqlConnectionFactoryBuilder();
    }

    public PostgresqlConnectionFactoryBuilder host(String host) {
        this.host = host;
        return this;
    }

    public PostgresqlConnectionFactoryBuilder port(int port) {
        this.port = port;
        return this;
    }

    public PostgresqlConnectionFactoryBuilder username(String username) {
        this.username = username;
        return this;
    }

    public PostgresqlConnectionFactoryBuilder password(String password) {
        this.password = password;
        return this;
    }

    public PostgresqlConnectionFactoryBuilder database(String database) {
        this.database = database;
        return this;
    }

    public io.r2dbc.spi.ConnectionFactory build() {
        PostgresqlConnectionConfiguration config = PostgresqlConnectionConfiguration.builder()
                .host(host)
                .port(port)
                .username(username)
                .password(password)
                .database(database)
                .build();
        return new PostgresqlConnectionFactory(config);
    }
}
